{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="blockHead headLarge">
        <div class="row title">
            <h1 class="col-12" > Se connecter </h1>
        </div>
    </div>

    <div class="blueBackground">
        <div class="row blockRegister justify-content-center">
            <div class="col-10 col-sm-8 col-lg-6 noPadding">
                <div class="iconLogin">
                    <svg width="3em" height="3em" viewBox="0 0 16 16" class="bi bi-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M13 14s1 0 1-1-1-4-6-4-6 3-6 4 1 1 1 1h10zm-9.995-.944v-.002.002zM3.022 13h9.956a.274.274 0 0 0 .014-.002l.008-.002c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664a1.05 1.05 0 0 0 .022.004zm9.974.056v-.002.002zM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                    </svg>
                </div>
                <div>
                    <form method="post">

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Vous êtes déjà connecté en tant que {{ app.user.username }}. Pour vous déconnecter : <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <label for="inputEmail">Email :</label>
                        <input type="email" value="{{ last_username }}" name="email"  id="inputEmail" class="form-control formMargin" required autofocus>

                        <label for="inputPassword">Mot de passe :</label>
                        <input type="password" name="password" id="inputPassword" class="form-control formMargin" required>


                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">
                        <div class="btn-center">
                            <button class="btn btn-primary" type="submit"> Valider </button>
                        </div>


                    </form>

                </div>

                <div class="row">
                    <a class="col-12 d-flex align-items-center justify-content-center loginLink" href="{{ path('app_register') }}"> Je n'ai pas encore de compte  ></a>
                </div>
            </div>
        </div>
    </div>

