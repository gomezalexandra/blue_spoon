{% extends 'base.html.twig' %}

{% block title %} homepage {% endblock %}

{% block body %}

    <div class="blockHead">
        <div class="row title">
            <h1 class="col-12 title" > Blue Spoon </h1>
            <h2 class="col-12 d-flex justify-content-center" > Simulation de performances pour restaurateurs </h2>
        </div>

        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="row d-flex justify-content-center homepageButton">
                <a class="col-5 col-sm-3 col-lg-2 center" href="{{ path('app_register') }}"> S'enregistrer </a>
                <a class="col-5 col-sm-3 col-lg-2 center" href="{{ path('app_login') }}"> Se connecter </a>
            </div>
        {% endif %}
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="row d-flex justify-content-center homepageButton">
                <a class="col-5 col-sm-3 col-lg-2 center" href="{{ path('app_dashboard') }}"> Tableau de bord </a>
                <a class="col-5 col-sm-3 col-lg-2 center" href="{{ path('app_logout') }}"> Se d√©connecter </a>
            </div>
        {% endif %}
    </div>


    <div class="row d-flex justify-content-center bluespoon">
        <img class="col-10 col-md-7" src="{{ asset('images/bluespoon.png') }}">
    </div>

    <div class="row blockContainer d-flex justify-content-center">
        <div class="choiceBlock blockStyle1 d-flex align-items-center justify-content-center col-5">
            <a href="{{ path('app_new_simulation') }}">
                <div class="icon">
                    <svg width="3em" height="3em" viewBox="0 0 16 16" class="bi bi-file-earmark-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
